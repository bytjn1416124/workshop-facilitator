    },
    "key_concepts": {
      "title": "Key Concepts in Cultural Competency",
      "duration": 1800,
      "content": "Essential concepts and principles of cultural competency in forensic settings.",
      "concepts": {
        "cultural_competency": "The ability to understand, communicate with, and effectively interact with people across cultures in forensic settings",
        "health_inequalities": "Systematic differences in health outcomes between different population groups in forensic care",
        "intersectionality": "The interconnected nature of social categorizations such as race, class, and gender in forensic care contexts",
        "cultural_safety": "An environment that is spiritually, socially, and emotionally safe for service users"
      },
