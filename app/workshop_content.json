  "workshop_metadata": {
    "title": "Cultural Competency Training for Forensic Mental Health Services",
    "duration": "Full Day",
    "target_audience": "Mental Health Professionals in Forensic Services",
    "objectives": [
      "Understand cultural competency in forensic mental health",
      "Develop skills for culturally safe practice",
      "Learn to address health inequalities",
      "Improve service user engagement"
    ]
  },
